@import "variable.styl"

body, html {
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  user-select text
  -webkit-tap-highlight-color transparent
  font-size $text-size-sm
  color #333
}

.no-scroll {
  overflow hidden
}

input {
  -webkit-appearance none
}

input:-webkit-autofill,
textarea:-webkit-autofill,
select:-webkit-autofill {
  -webkit-box-shadow: 0 0 0 1000px $autofill inset;
}

input[type=text]:focus, input[type=password]:focus, textarea:focus {
  -webkit-box-shadow: 0 0 0 1000px $autofill inset;
}

a {
  color #333
  text-decoration none
}

.pr {
  position relative
}

.pa {
  position absolute
}

.section {
  padding 150px 0
}

.t-center {
  text-align center
}

.t-right {
  text-align right
}

.bgf {
  background-color #fff
}

.container {
  margin 0 auto
  width 560px
  box-sizing border-box
}

.w-560 {
  margin 0 auto
  width 560px
  box-sizing border-box
}

.w-960 {
  margin 0 auto
  width 960px
  box-sizing border-box
}

.w-636 {
  margin 0 auto
  width 636px
  box-sizing border-box
}

.w-256 {
  margin 0 auto
  width 256px
  box-sizing border-box
}

//page css
#app {

}

.page {
  padding 66px 0 40px
}

.page-padding {
  padding 24px
}

.page-lg-padding {
  padding 48px 32px
}

.panel-scroll {
  -webkit-overflow-scrolling: touch;

  &::-webkit-scrollbar {
    width: 0;
    height: 0;
  }

  &::-webkit-scrollbar-track {
    border-radius: 3px;
    background: none;
    -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.08);
  }

  /* 滚动条滑块 */

  &::-webkit-scrollbar-thumb {
    border-radius: 2px;
    background: rgba(0, 0, 0, 0.12);
    -webkit-box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.2);
  }
}


@media only screen and (max-width $screen-sm-min) {
  .page {
    padding 56px 0 40px
  }

  .page-padding, .page-lg-padding {
    padding 4% 3%
  }

  .container, .w-560, .w-960, .w-636, .w-256 {
    width 100%
  }
}
